<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adrenergic.tremorsense" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/launcher_label"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".home"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecordAccelData"
            android:label="@string/title_activity_record_accel_data" >
        </activity>
        <activity
            android:name=".profileSetup"
            android:label="@string/title_activity_profile_setup"
            android:parentActivityName=".home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adrenergic.tremorsense.home" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adrenergic.tremorsense.home" />
        </activity>
        <activity
            android:name=".custrecSetup"
            android:label="@string/title_activity_custrec_setup"
            android:parentActivityName=".home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adrenergic.tremorsense.home" />
        </activity>
        <activity
            android:name=".fullrecSetup"
            android:label="@string/title_activity_fullrec_setup"
            android:parentActivityName=".home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adrenergic.tremorsense.home" />
        </activity>
        <activity
            android:name=".info"
            android:label="@string/title_activity_info"
            android:parentActivityName=".home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adrenergic.tremorsense.home" />
        </activity>
    </application>

</manifest>
